{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2018", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "rootDir": "./",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "types": ["@testing-library/jest-dom"],
    "noUnusedLocals": true
  },
  "include": ["./src/**/*.ts", "**/*.tsx"],
  "exclude": ["example"]
}
